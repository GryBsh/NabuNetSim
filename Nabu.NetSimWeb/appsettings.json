{
  "Settings": {
    "Serial": [
      {
        "Type": "Serial",
        "Port": "COM3",
        "Source": "1984 Cycle 1",
        "Enabled": false
      }
    ],
    "TCP": [
      {
        "Type": "TCP",
        "Port": 5816,
        "Source": "1984 Cycle 1"
      }
    ],
    "UseHome": true,
    //"StoragePath": "C:/Nabu/storage",
    //"LocalProgramPath": "C:/Nabu/NABUs",
    "EmulatorPath": "T:/development/nabu-mame/nabu.cmd",
    "EnableSymLinks": false,
    "HeadlessSource": "NABU Launcher",
    //"CPMSource": "nns-bundle-ishkurcpm",
    //"CPMProgram": "NFS_HYBRID_BOOT.nabu",
    "Protocols": [],
    "EnableJavaScript": false,
    "StartEmulatorInHeadlessMode": true,
    "PreCacheRemoteSources": true
    //"DefaultIconPattern": "4MDAgP9tKgpIav+AwMDg4AcDAwH/mqqaqpj/AQMDBwc=",
    //"DefaultIconColor": "T0FOQeHh4eHh4eFBTkFPQU9BTkHh4eHh4eHhQU5BT0E="
  },
  "Packages": {
    "Sources": [
      {
        "Name": "Local",
        "Path": "https://raw.githubusercontent.com/NABUligans/NAPA/main/repository/1R3/repo.json"
      }
    ]
  },
  "Headlines": {
    "Feeds": [
      {
        "Name": "Youtube",
        "Url": "https://rss.app/feeds/bQaXJIWLsRFoLQ76.xml"
      },
      {
        "Name": "NabuNetwork",
        "Url": "https://www.nabunetwork.com/feed/"
      }

    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "System.Net.*": "Warning",
      "Microsoft.*": "Warning",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "variables": {

      "nns_layout": "${level:lowercase=true:truncate=4:when=level==LogLevel.Info or level==LogLevel.Warn}${when:when=level==LogLevel.Error:inner=fail}${when:when=level==LogLevel.Fatal:inner=crit}${when:when=level==LogLevel.Debug:inner=dbug}${when:when=level==LogLevel.Trace:inner=trce}: [${date:format=yyyy-MM-dd} ${time}] ${logger:shortName=True}: ${message}${onexception:inner=${newline}${exception:format=tostring}}"
    },
    "extensions": [
      { "assembly": "NLog.Extensions.Logging" },
      { "assembly": "NLog.Web.AspNetCore" }
    ],
    "targets": {
      "async": true,
      "file": {
        "type": "File",
        "fileName": "",
        "archiveEvery": "Day",
        "maxArchiveFiles": 7,
        "maxArchiveDays": 7,
        "archiveNumbering": "Date",
        "layout": "${nns_layout}"
      },
      "colorconsole": {
        "type": "ColoredConsole",
        "layout": "${nns_layout}",
        "useDefaultRowHighlightingRules": false,
        "wordHighlightingRules": [
          {
            "regex": "^info",
            "foregroundColor": "DarkGreen"
          },
          {
            "regex": "^warn",
            "foregroundColor": "Yellow"
          },
          {
            "regex": "^fail",
            "foregroundColor": "Black",
            "backgroundColor": "Red"
          },
          {
            "regex": "^crit",
            "foregroundColor": "White",
            "backgroundColor": "Red"
          }
        ]

      }
    },
    "rules": [
      {
        "logger": "Microsoft.AspNetCore.*",
        "maxLevel": "Info",
        "final": true
      },
      {
        "logger": "System.Net.Http.**",
        "maxLevel": "Info",
        "final": true
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "file, colorconsole"
      }
    ]
  },
  "AllowedHosts": "*",
  "Urls": "https://*:5005"
}