END

TO DEC 
SETH 0 SETPC 10
HT IF :C = :V [SOUND]
SAD
PU
SETSH 26
END

TO INPUT 
LABEL "INPUT
IF FIREP 1 [DEC]
IF CHARP [MAKE "F RC IF :F = CHAR 189 [THROW "HOME]]
IF JOY 1 = 1 [SETY YCOR + 30 IF YCOR > 0 [SETY -60]]
IF JOY 1 = 3 [SETX XCOR + 20 IF XCOR > 100 [SETX -100]]
IF JOY 1 = 5 [SETY YCOR - 30 IF YCOR < -60 [SETY 0]]
IF JOY 1 = 7 [SETX XCOR - 20 IF XCOR < -100 [SETX 100]]
MAKE "C ( ( XCOR + 100 ) / 20 ) + ( ( YCOR / 60 ) * -20 ) + ( YCOR / 60 ) * -2
MAKE "C :C + 28
IF SHOWNP [HT] [SHOW]
WAIT 10
GO "INPUT
END

