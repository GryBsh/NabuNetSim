WAIT 100
SETCURSOR [0 22] PR []
MAKE "IN 0 MAKE "L 10
GO "IN
LABEL "RT
SETCURSOR [10 22]
SETBG 12
PR [THAT'S CORRECT!!]
WAIT 100
SETBG 4
SETCURSOR [0 22] PR []
END

