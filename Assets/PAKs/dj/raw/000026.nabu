IF :L > 10 [IF :R = CHAR 127 [MAKE "L :L - 1 MAKE "IN BL :IN]]
SETCURSOR SE :L 20
IF NUMBERP :R [MAKE "IN WORD :IN :R TYPE :R MAKE "L :L + 1]
IF OR :L > 14 :R = CHAR 13 [IF :ANS = :IN [GO "RT] [GO "WR]]
